{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "lib": [
      "esnext"
    ],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@routes/*": [
        "./src/routes2/*"
      ],
      "@models/*": [
        "./src/prisma/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/routes/**/*.ts"
  ]
}