{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "lib": ["esnext"],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@integrations/*": ["./src/integrations/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
